@model VFS.Common.Models.Masters.MstcountryMap
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <select asp-for="CountryId" class="form-control" asp-items="ViewBag.CountryId"></select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mission" class="control-label"></label>
                <select asp-for="MissionId" class="form-control" asp-items="ViewBag.MissionId"></select>
                <span asp-validation-for="MissionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryOps" class="control-label"></label>
                <select asp-for="CountryOpsId" class="form-control" asp-items="ViewBag.CountryOpsId"></select>
                <span asp-validation-for="CountryOpsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitOps" class="control-label"></label>
                <select asp-for="UnitOpsId" class="form-control" asp-items="ViewBag.UnitOpsId"></select>
                <span asp-validation-for="UnitOpsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

